{% extends 'base.html.twig' %}
{% block title %}Liste des articles{% endblock %}
{% block body %}
{% if articles %}
    <table id="articles" class="table table-striped">
    <thead>
        <tr>
            <th>Article</th>
            <th>Action</th>
        
        </tr>
    </thead
    <tbody>
        {% for article in articles %}
        <tr>
            <td>{{ article }}</td>
            <td>
                <a href="/article/1" class="btn btn-dark">Details</a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
    </table>
    {% else %}
    <p> Aucun articles </p>
    {% endif %}
{% endblock %}
